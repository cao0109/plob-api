{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" },
      "installCommand": "yum install hostname && npm ci"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "installCommand": "yum install hostname && npm ci"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
